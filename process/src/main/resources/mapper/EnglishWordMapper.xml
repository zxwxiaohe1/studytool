<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.en.domain.mapper.EnglishWordMapper">
    <resultMap id="baseResultMap" type="com.study.en.domain.entity.EnglishWord">
        <id column="id" property="id"/>
        <result column="word" property="word"/>
        <result column="mean" property="mean"/>
        <result column="articleId" property="articleId"/>
        <result column="createDate" property="createDate"/>
        <result column="remark" property="remark"/>
    </resultMap>
    <sql id="baseColumns">
        a.id,
        a.word,
        a.mean,
        a.article_id AS "articleId",
        a.create_date AS  "createDate",
        a.remark AS "remark"
    </sql>
    <select id="pageByArticleIdLike" resultMap="baseResultMap">
        SELECT
        <include refid="baseColumns"/>
        FROM english_word a
        WHERE a.article_id Like '%'||#{articleId}||'%'
        ORDER BY a.create_date DESC
        limit #{page.start}, #{page.pageSize}
    </select>
</mapper>